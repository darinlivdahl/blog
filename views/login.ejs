<form action="/loginUser" class="mx-auto mt-5" style="width: 350px;" method="post">
    <h1>Login</h1>
    <div class="mb-3">
        <label for="usernameInput" class="form-label">Username</label>
        <input type="email" class="form-control" id="usernameInput" name="userName" aria-describedby="usernameHelp">
        <div id="usernameHelp" class="form-text">Username must be in the form of an email address.</div>
    </div>
    <div class="mb-3">
        <label for="passwordInput" class="form-label">Password</label>
        <input type="password" maxlength="12" class="form-control" id="passwordInput" name="password">
    </div>
